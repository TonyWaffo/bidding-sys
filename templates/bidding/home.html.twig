{%extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
      <h5 class="my-0 mr-md-auto font-weight-normal">Easy bidding</h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="#">Contact</a>
        <a class="p-2 text-dark" href="/logout">History</a>
      </nav>
      <a class="btn btn-outline-primary" href="#">Log out</a>
    </div>

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
      <h1 class="display-4">Bidding</h1>
      <p class="lead">In a few clicks, create your bidding room where you will sell your
      products. With the possibility to set some features and invite people throughout the world, bidding has
      never been a such pleasure.</p>
    </div>
    <div class="">
      <spam class="">Open a bidding room now</spam>
    </div>

    {{form_start(form)}}
      <div class="">
        {{form_widget(form)}}
      </div>
    {{form_end(form)}}

    <div class="">
      <p>{{result[0]}}</p>
      <p>{{result[1]}}</p>
      <p>{{result[2]}}</p>
    </div>


{% endblock %}